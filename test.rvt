// --- Variable declarations ---
let x = 5;
var y = 3;

// --- Arithmetic + print ---
print x + y;                // 8

// --- Strings and concatenation ---
let greet = "Hello";
let name = "Rivet";
print greet + ", " + name;  // Hello, Rivet

// --- Booleans and comparison ---
let ok = true;
let fail = false;
if (ok && !fail) {
  print "Status: OK";
} else {
  print "Status: FAIL";
}

// --- While loop ---
var count = 0;
while (count < 3) {
  print "While count = " + count;
  count = count + 1;
}

// --- C-style for loop ---
for (var i = 0; i < 5; ) {
  print "for i = " + i;
  i = i + 1;
}

// --- Arrays ---
let nums = [10, 20, 30];
print nums;                 // [10, 20, 30]

// --- for-in loop over array ---
for n in nums {
  print "n = " + n;
}

// --- Function definition + call ---
fn add(a, b) {
  return a + b;
}

print "add(7,8) = " + add(7, 8)